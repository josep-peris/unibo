{
    "compilerOptions": {
      "module": "commonjs",
      "declaration": true,
      "declarationDir": "dist/@prueba",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "allowSyntheticDefaultImports": true,
      "noImplicitAny": true,
      "target": "es2017",
      "lib": ["ES2016","DOM"],
      "removeComments": true,
      "outDir": "./dist",
      "baseUrl": "./",
      /* "inlineSourceMap": true, */
      "esModuleInterop": true,
      "sourceMap": true,
      "incremental": true,
      "allowJs": true,
    },
    "include": ["src/**/*"], 
    "exclude": ["node_modules", "dist", "src/__tests__", "types"]
  }
  